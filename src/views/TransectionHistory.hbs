    <div class="outer">
        <div class="container1">
            <h2>Transaction History</h2><br>
            <h3>Name : {{user.firstname}} {{user.lastname}}</h3>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount (â‚¹)</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each transactions}}
                    <tr class="even">
                        <td>{{this.date}}</td>
                        <td>{{this.from}}{{this.to}}</td>
                        <td>{{this.amount}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <br>
            <h3>Balance : {{balance}}</h3>
        </div>
